<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.workfront.internship.booklibrary.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.workfront.internship.booklibrary.servlets.RegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>com.workfront.internship.booklibrary.servlets.MainPageServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/index.jsp</url-pattern>

    </servlet-mapping>

    <listener>
        <listener-class>com.workfront.internship.booklibrary.spring.SpringContextListener</listener-class>
    </listener>


</web-app>